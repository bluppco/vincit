---
const { title, href, target } = Astro.props
---
<div class="flex items-center gap-1">
    <div class="w-6 aspect-square">
        <img
            src="/icons/red_arrow.svg"
            class="w-6 aspect-square"
        />
    </div>
    <div>
        <a href={ href } target={ target ? "_blank" : "" }>
            <p class="font-studio_feixen_sans tracking-wide hover:text-vincit_red">{ title }</p>
        </a>
    </div>
</div>
