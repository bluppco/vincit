---
// IMPORTING ATOMS
import Button from "../../atoms/Button.astro"

// IMPORTING COMPONENTS
import ImageTitleSubTitleButton from "../common/ImageTitleSubTitleButton.astro"

const { data } = Astro.props
---
<section>
    <div class="grid grid-cols-2 gap-x-6 gap-y-14">
        {

            data.map( ( item ) => {

                return(
                    <ImageTitleSubTitleButton
                        title={ item.name }
                        sub_title={ item.title }
                        src={ item.cover }
                        alt={ item.name }
                        button_title="Read more"
                        href={ item.slug }
                    />
                )

            })

        }
    </div>
    <div class="flex justify-center pt-20">
        <Button>Load more cases</Button>
    </div>
</section>
