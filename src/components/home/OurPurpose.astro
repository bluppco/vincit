---
// IMPORTING ATOMS
import Button from "../../atoms/Button.astro"

const { data } = Astro.props
---
<section class="h-screen max-h-screen flex justify-center items-center">
    <div class="grid grid-cols-3 ">
        <div>
            <h4 class="font-studio_feixen_sans text-xl font-semibold">{ data.title }</h4>
        </div>
        <div class="col-span-2">
            <p class="font-studio_feixen_sans text-4xl">{ data.description }</p>
            <div class="pt-10">
                <Button>Read more</Button>
            </div>
        </div>
    </div>
</section>
